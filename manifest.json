{
    "manifest_version": 2,
    "name": "YouTube Skin",
    "version": "0.0.1",
    "description": "YouTube save videos and channels",
    "icons": {
        "48": "icons/icon-512.png"
    },
    "permissions": ["activeTab", "contextMenus", "https://yt.lemnoslife.com/*"],
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["common.js", "app.js"],
            "css": ["styles/style.css"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "sidebar_action": {
        "default_title": "YouTube Skin",
        "default_panel": "sidebar.html",
        "default_icon": "icons/icon-512.png",
        "open_at_install": false
    },
    "browser_action": {
        "default_icon": "icons/icon-512.png"
    }  
}
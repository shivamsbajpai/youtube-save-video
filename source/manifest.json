{
    "manifest_version": 2,
    "name": "YouTube Skin",
    "version": "1.0.15",
    "description": "YouTube save videos and channels",
    "icons": {
        "512": "icons/icon-512.png"
    },
    "permissions": ["storage", "activeTab", "contextMenus", "https://yt.lemnoslife.com/*"],
    "content_scripts": [
        {
            "matches": ["*://*.youtube.com/*"],
            "js": ["common.js", "app.js"],
            "css": ["styles/style.css"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "icons/icon-512.png"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "{23913f75-1846-41de-a6b8-190adb375780}",
          "strict_min_version": "56.0"
        }
    }
}